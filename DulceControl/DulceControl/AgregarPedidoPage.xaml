<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PastelitosApp.AgregarPedidoPage"
    Title="Nuevo Pedido"
    BackgroundColor="#F6F6F6">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Nombre" FontSize="18"/>
            <Entry x:Name="NombreEntry" Placeholder="Ej: Fer Di Ioro"/>

            <Label Text="Cantidad Membrillo" FontSize="18"/>
            <Entry x:Name="MembrilloEntry" Keyboard="Numeric"/>

            <Label Text="Cantidad Batata" FontSize="18"/>
            <Entry x:Name="BatataEntry" Keyboard="Numeric"/>

            <Label Text="Precio Total" FontSize="18"/>
            <Entry x:Name="PrecioEntry" Keyboard="Numeric" Placeholder="Ej: 4500"/>

            <CheckBox x:Name="PagadoCheck" />
            <Label Text="¿Pagado?" />

            <CheckBox x:Name="EntregadoCheck" />
            <Label Text="¿Entregado?" />

            <Button Text="Guardar Pedido" Clicked="OnGuardarPedidoClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White" FontSize="20" Padding="10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
