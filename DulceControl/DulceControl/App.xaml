<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PastelitosApp.App">

    <Application.Resources>
        <!-- Colores y estilos globales -->
        <Color x:Key="PrimaryColor">#009688</Color>
        <Color x:Key="SecondaryColor">#FF5722</Color>
        <Color x:Key="BackgroundColor">#F9F9F9</Color>
        <Color x:Key="TextColorDark">#333333</Color>
        <Color x:Key="TextColorLight">#666666</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource TextColorDark}" />
        </Style>

        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
        </Style>

    </Application.Resources>
</Application>
