<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PastelitosApp.MainPage"
             Title="Pedidos de Pastelitos">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Resumen de Pedidos"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#3E3E3E"/>

            <!-- Aquí irán dinámicamente los pedidos -->

            <CollectionView x:Name="PedidosCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#DDDDDD"
                               BackgroundColor="#FFFFFF"
                               CornerRadius="12"
                               Padding="12"
                               Margin="0,4"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="18" TextColor="#333333"/>
                                <Label Text="{Binding Detalle}" FontSize="14" TextColor="#666666"/>
                                <Label Text="{Binding Estado}" FontSize="14" TextColor="#009688"/>
                                <Label Text="{Binding Pastelitos}" FontSize="14" TextColor="#444444"/>
                                <HorizontalStackLayout>
                                    <CheckBox IsChecked="{Binding Pagado}" />
                                    <Label Text="Pagado" VerticalOptions="Center"/>
                                    <CheckBox IsChecked="{Binding Entregado}" Margin="16,0,0,0"/>
                                    <Label Text="Entregado" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
